<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E4E7"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_detail_relative_picture_neighbour"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/activity_detail_img_picture_neighbour"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test" />

        <ImageView
            android:id="@+id/activity_detail_img_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="20dp"
            android:tint="@color/colorWhite"
            android:src="@drawable/ic_arrow_left"/>

        <TextView
            android:id="@+id/activity_detail_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Prenom"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/activity_detail_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="10dp"
        android:layout_below="@+id/activity_detail_relative_picture_neighbour">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_detail_text_name_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingBottom="3dp"
                android:text="Prenom"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/activity_detail_text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:text="St pierre du mont Ã  5klm"
                android:drawableStart="@drawable/ic_map_marker"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorAccent"/>

            <TextView
                android:id="@+id/activity_detail_text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:text="+33 6 86 22 12 55"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorAccent"/>

            <TextView
                android:id="@+id/activity_detail_text_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:text="www.facebook.fr/prenom"
                android:drawableStart="@drawable/ic_web"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorAccent"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="10dp"
        android:layout_below="@id/activity_detail_card_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingBottom="3dp"
                android:text="A propos de moi"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/activity_detail_text_a_propos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Lorem Lorem"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_detail_fab_favori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorWhite"
        android:src="@drawable/ic_star_white_24dp"
        android:tint="@color/colorBlack"
        android:layout_alignParentRight="true"
        android:layout_below="@id/activity_detail_relative_picture_neighbour"
        android:layout_marginTop="-24dp"
        android:layout_marginRight="15dp"
        />
</RelativeLayout>
